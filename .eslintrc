{
    "extends": [
        "eslint:recommended",
        "yandex"
    ],
    "rules": {
        "space-before-function-paren": [ 0 ],
        "space-after-keywords": [ 0 ],
        "one-var": [ 0 ],
        "vars-on-top": [ 0 ],
        "no-inner-declarations": [ 0 ],
        
        "indent": [ 2, 4, {
            "VariableDeclarator": 1,
            "SwitchCase": 1
        } ],
        "quotes": [ 2, "single" ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "always" ],
        
        "valid-jsdoc": [ 2 ],
        "block-scoped-var": [ 2 ],
        "no-caller": [ 2 ],
        "no-eq-null": [ 2 ],
        "no-extend-native": [ 2 ],
        "no-native-reassign": [ 2 ],
        "no-multi-spaces": [ 2 ],
        "space-infix-ops": [ 2 ],
        "space-in-parens": [ 2, "never" ],
        "space-return-throw-case": [ 2 ],
        "no-proto": [ 2 ],
        "no-return-assign": [ 2, "always" ],
        "no-catch-shadow": [ 2 ],
        "global-require": [ 2 ],
        "arrow-parens": [ 2 ],
        "computed-property-spacing": [ 2, "never" ]
    },
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "window": false,
        "global": false
    }
}
